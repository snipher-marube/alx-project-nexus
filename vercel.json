{
  "version": 2,
  "builds": [
    {
      "src": "ecommerce/wsgi.py",
      "use": "@vercel/python",
      "config": {
        "maxLambdaSize": "15mb",
        "runtime": "python3.12",
        "buildCommand": "bash setup.sh"
      }
    },
    {
      "src": "staticfiles/**",
      "use": "@vercel/static"
    }
  ],
  "routes": [
    {
      "src": "/static/(.*)",
      "dest": "/static/$1"
    },
    {
      "src": "/swagger/static/(.*)",
      "dest": "/static/drf-yasg/$1"
    },
    {
      "src": "/(.*)",
      "dest": "/ecommerce/wsgi.py"
    }
  ]
}